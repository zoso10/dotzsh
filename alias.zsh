# Ping
alias pingg='ping -c 3 google.com'
alias pingd='ping -c 3 8.8.8.8'

# List directory
alias ll='ls -lahG'
alias lls='ls -aG'
alias lh='ls -d .*'

# Changing directory
alias ..='cd ..'
alias ...='cd ../..'

# Git
alias ga='git add'
alias gp='git push'
alias gs='git status'
alias gd='git diff'
alias gm='git commit'
alias gma='git commit -a'
alias gc='git checkout'
alias gl='git pull'

# ZSH
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zsh/zshrc'"
alias zshrc='vim ~/.zsh/zshrc && reload'

# Vim
alias vimrc='vim ~/.vim/vimrc'

